<%= @newsitem = New.new %>
<% if @newsitem.errors.any? %>
        <div id="alert" class="alert alert-info alert-dismissible fade show" style="display: none; " role="alert">
            <div class="container box_1620">
                <div class="pl-4">
                        <i class="fa fa-info-circle"></i>	
                            <%= pluralize(@newsitem.errors.count, "error") %>
                              <ul>
                               <% @newsitem.errors.full_messages.each do |msg|%>
                                <li><%= msg %></li>
                               <% end %>
                              </ul>
                        <button id="alert-cl-btn" type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                        </button>
                </div>
            </div>
        </div>
<% end %>
