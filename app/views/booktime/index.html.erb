	<%- # ================Home Banner Area =================-%>
        <section class="banner_area">
						<div class="banner_content text-center">
							<h2>Varata aika keskusteluun minun kanssa</h2>
						</div>
						<div class="main_title">
                                                    <p>Ajan varaamiseen websivun kautta</p>
                                                        <% if !logged_in? %>
                                                            <%= link_to "Kirjaudu sisään testiympäristöön", login_path %>
                                                            <% else %>
                                                            <%= link_to "Kirjaudu ulos", logout_path, method: :delete %>
                                                        <% end %>
						</div>
        </section>
        <%- # ================End Home Banner Area =================-%>
        <div class="blog_area single-post-area p-120">
    <div class="container">
        <div class="comment-form">
            <h4>Ehdota ajankohtaa</h4>
                <%= form_with url: '/booktime' do |f| %>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="row">
                                <div class="col-lg-7">
                                    <div class="form-group">
                                        <%= f.date_field :date, as: :date, value: f.object.try(:strftime, "%d,%m,%Y"),  :class => 'form-control mb-10', placeholder: 'Päivämäärä:' %>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <%= f.time_field :time, as: :time, value: f.object.try(:strftime, "%HH,%MM"),  :class => 'form-control mb-10', placeholder: 'Klo:' %>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <%= f.email_field :email, :class => 'form-control mb-10', placeholder: 'Sähköposti osoiteesi:' %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <%= f.text_area :message, :class => 'form-control mb-10', placeholder: 'Viesti:' %>
                            </div>
                        </div>
                    </div>
                <%= f.submit "Lähetä kutsu", :class => 'primary-btn submit_btn' %>
                <% end %>
        </div>
    </div>
</div>
